<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cwc.hrm.dao.UserDao">

    <insert id="addUser">
        insert into HRM_USER values (SEQ_USER.nextval,#{user_name},#{user_pass})
    </insert>
    <select id="queryUserNameAndPass" resultType="com.cwc.hrm.model.User">
        select * from HRM_USER where USER_NAME=#{user_name} and USER_PASS=#{user_pass}
    </select>
    <select id="queryUser" resultType="com.cwc.hrm.model.User">
        select * from HRM_USER
    </select>
</mapper>